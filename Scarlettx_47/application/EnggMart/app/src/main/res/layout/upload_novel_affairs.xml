<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context="com.enggmartservices.enggmart.activities.UploadNovelAffaires">


    <ImageView
        android:id="@+id/image_for_pdf_file"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="#d6d6d6"
        android:visibility="gone" />


    <EditText
        android:id="@+id/date_for_pdf_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:hint="enter date"
        android:inputType="none"
        android:textColor="#000000"
        android:textColorHint="#636363"
        android:visibility="gone" />


    <TextView
        android:id="@+id/pdffileselect_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="no Pdf File Selected"
        android:textColor="#000" />

    <Button
        android:id="@+id/select_pdf_file_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="select pdf file" />

    <Button
        android:id="@+id/upload_pdf_button_current_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="upload Current Affaires"
        android:visibility="gone" />

    <Button
        android:id="@+id/upload_pdf_button_novel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:text="upload Novel"
        android:visibility="gone" />


</LinearLayout>

